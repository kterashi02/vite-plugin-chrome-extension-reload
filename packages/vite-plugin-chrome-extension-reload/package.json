{
  "name": "vite-plugin-chrome-extension-reload",
  "version": "0.1.0",
  "description": "Vite plugin for Chrome Extension auto reload with Manifest V3 support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "chrome-extension",
    "hot-reload",
    "hmr",
    "manifest-v3"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "vite": ">=4.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.13",
    "rollup": "^4.53.3",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.0.0"
  },
  "dependencies": {
    "ws": "^8.18.0"
  }
}
